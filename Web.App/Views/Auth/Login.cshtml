@model CoreLayer.Dtos.User.LoginDto

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    string returnUrl = ViewData["url"].ToString();
}



@using (Html.BeginForm("Login","Auth",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
        <div class="row" style="margin-top:150px;opacity:0.8">
            <div class="col-6 offset-3">
                <div class="card">
                    <div class="card-header bg-dark" style="color:white"><h2 style="text-align:center;">Giriş Yap</h2></div>
                    <div class="card-body">
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger mt-2" })
                            <input type="hidden" name="returnUrl" value="@returnUrl" />
                            <div class="form-group">
                                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2 mt-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control mt-2" } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger mt-2" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2 mt-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control mt-2" } })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger mt-2" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Login" class="btn btn-dark mt-2" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-dark">
                        <a href="/Auth/SignUp" class="btn btn-outline-danger" style="color:white">Sign Up</a>
                        <a href="/Auth/Forgot" class="btn btn-outline-danger ml-2" style="color:white">Forgot Password</a>
                    </div>
                </div>
            </div>
        </div>
   
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
